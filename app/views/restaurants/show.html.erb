
<h2><%= @restaurant.name %></h2>
<br>
<div class = "meals">

<%= link_to "New Meal", new_restaurant_meal_path(@restaurant) %>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>Menu</th>
      <th>Price</th>
      <th>Select</th>
    </tr>
  </thead>

  <tbody>

    <% @restaurant.meals.each do |meal|%>
    <tr>
      <td><%=meal.name%></td>
      <td><%= meal.price %></td>
      <td><%=check_box_tag 'meal_id[]', meal.id %></td>
    </tr>
    <%end%>
  </tbody>

</table>

</div>
